<%= render 'shared/errors', object: @franchise %>

</div>
<%= form_with model: @franchise do |f| %>
  <div class="mb-3 row">
    <div class="'col-sm-2 col-form-label'">
      <%= f.label :title%>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :title,  placeholder: "Name franchise", class: 'form-control' %>
    </div>
  </div>  
  
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
    <%= f.label :description %>

    <div class="col-sm-10">
      <%= f.text_area :description, class: 'form-control' %>
    </div> 
  </div>  


  <%= f.submit "Submit franchise", class: 'btn btn-primary' %> 
<% end %>