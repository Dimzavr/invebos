<% provide :page_title, "Franchises" %>
<% currently_at 'Franchises' %>

<h1 class="mb-4">Franchises</h1>

<%= link_to "New franchise", new_franchise_path, class: 'btn btn-outline-info btn-lg mb-3' %>

<%== pagy_bootstrap_nav @pagy %>

<% @franchises.each do |franchise| %>
  <article class="card my-3">
  	<div class="card-body">
      <h4><%= franchise.title %></h4>

      <section class="card-text">
	    <time datetime="<%= franchise.formatted_created_at %>">
		  <small><%= franchise.formatted_created_at %></small>
		</time>

		<p class="my-2">
		  <%= truncate strip_tags(franchise.description), length: 120, omission: '...(Continued)'  %>
		</p> 
	  </section> 

	  	<%= link_to 'Show', franchise_path(franchise.id), class: 'btn btn-primary' %> |
	  	<%= link_to 'Edit', edit_franchise_path(franchise.id), class: 'btn btn-secondary' %> |
	  	<%= link_to 'Destroy', franchise_path(franchise.id),class: 'btn btn-danger', data: {method: :delete, confirm: 'Are you sure?'}  %>
    </div>
  </article>  
  	
<% end %>

<%== pagy_bootstrap_nav @pagy %>
